    <div class="header">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="/" class="navbar-brand">Super Quiz</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="#/quizzes">Quizzes</a>
                        </li>
                        <li>
                            <a href="#/quizzes/add" ng-if="ctrl.currentUserGlobal">Add New</a>
                        </li>
                    </ul>

                    <ul ng-if="!ctrl.currentUserGlobal" class="nav navbar-nav navbar-right">
                        <li><a href="#/login">Login</a></li>
                        <li><a href="#/register">Register</a></li>
                    </ul>

                    <ul ng-if="ctrl.currentUserGlobal" class="nav navbar-nav navbar-right">
                        <li><a href="#/me">Hi {{ctrl.currentUserGlobal.firstName}}</a></li>
                        <li><a href="#" ng-click="ctrl.logout()">Logout</a></li>
                    </ul>

                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div ng-view="" style="margin-top: 36px" class="page-view"></div>
    </div>
